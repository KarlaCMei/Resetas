<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
        android:background="@drawable/menu_background">


        <Button
            android:id="@+id/button_plato_fuerte"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="PLATO FUERTE "
            android:textSize="20dp"
            android:background="@drawable/esquina_redondeada_2"
            android:textColor="@color/background_splash"
            android:backgroundTint="@color/rosaPalo"
            app:layout_constraintBottom_toTopOf="@+id/button_postres"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_postres"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="POSTRES"
            android:textSize="20dp"
            android:background="@drawable/esquina_redondeada_2"
            android:textColor="@color/background_splash"
            android:backgroundTint="@color/rosaPalo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_sopas"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="SOPAS"
            android:textSize="20dp"
            android:background="@drawable/esquina_redondeada_2"
            android:textColor="@color/background_splash"
            android:backgroundTint="@color/rosaPalo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_postres" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>